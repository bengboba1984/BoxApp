<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top|left"
    android:paddingBottom="10.0dip"
    android:paddingLeft="@dimen/magin_big"
    android:paddingRight="@dimen/magin_big"
    android:paddingTop="10.0dip">

        <TextView
            android:id="@id/test_result_detail_list_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magin_middle"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="1"
            android:textSize="@dimen/font_middle" />



        <TextView
            android:id="@id/test_result_detail_list_ip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magin_middle"
            android:layout_weight="7"
            android:gravity="center_horizontal"
            android:text="192.168.123.123"
            android:textSize="@dimen/font_middle" />

        <TextView
            android:id="@id/test_result_detail_list_avgDelay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magin_middle"
            android:layout_weight="4"
            android:gravity="center_horizontal"
            android:text="0.11毫秒"
            android:textSize="@dimen/font_middle" />

        <TextView
            android:id="@id/test_result_detail_list_lossPercent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magin_middle"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:text="0.123%"
            android:textSize="@dimen/font_middle" />

        <TextView
            android:id="@id/test_result_detail_list_avgJitter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magin_middle"
            android:layout_weight="4"
            android:gravity="center_horizontal"
            android:text="12毫秒"
            android:textSize="@dimen/font_middle" />
</LinearLayout>
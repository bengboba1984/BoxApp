<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button">
        <item name="android:textSize">@dimen/font_middle</item>
        <item name="android:background">@color/btn_blue</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/magin_big</item>
    </style>
    <style name="ott_connect_content">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/magin_bigger</item>
        <item name="android:layout_marginTop">@dimen/magin_small</item>
        <item name="android:layout_marginRight">@dimen/magin_bigger</item>
    </style>
    <style name="underline">
        <item name="android:background">@color/edit_back</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0dip</item></style>
</resources>
